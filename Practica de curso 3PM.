#include <stdio.h>
#include <stdlib.h>

int main() {
    int n = 3, i;

    // Asignar memoria inicial para el arreglo
    int *arr = (int *)malloc(n * sizeof(int));
    if (arr == NULL) {
        printf("Error al asignar memoria\n");
        return 1;
    }

    // Inicializar el arreglo con valores
    for (i = 0; i < n; i++) {
        arr[i] = i + 1;
    }

    // Redimensionar el arreglo a un nuevo tamaÃ±o
    n = 5;
    arr = (int *)realloc(arr, n * sizeof(int));
    if (arr == NULL) {
        printf("Error al redimensionar memoria\n");
        return 1;
    }

    // Rellenar los nuevos elementos del arreglo
    for (i = 3; i < n; i++) {
        arr[i] = i + 1;
    }

    // Imprimir los elementos del arreglo redimensionado
    printf("Arreglo redimensionado: ");
    for (i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    // Liberar la memoria asignada
    free(arr);

    return 0;
}
